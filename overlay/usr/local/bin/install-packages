#!/bin/bash

set -o errexit

if [ $# = 0 ]; then
	echo >&2 "No packages specified"
	exit 1
fi

if [[ $EUID != "0" ]]; then
  echo "error: Not root user, exiting..."
fi

apt-get update
DEBIAN_FRONTEND=noninteractive RUNLEVEL=1 apt-get install -yq --no-install-recommends "$@"

apt-get clean -y

rm -rf \
	/var/cache/debconf/* \
	/var/lib/apt/lists/* \
	/tmp/* \
	/var/tmp/*